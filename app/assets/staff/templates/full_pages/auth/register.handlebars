<div id="authContainer">
    <main id="auth">
        <div id="registerContainer">
            <form id="newAccount" class="newAccount auth stack" autocomplete="off" {{ action "signIn" on="submit" }}>
                {{ input name="email" class="authInputBox" placeholder="Email Address" type="email" value=email }}
                {{ input name="firstName" class="authInputBox" placeholder="First Name" type="text" value=firstName }}
                {{ input name="lastName" class="authInputBox" placeholder="Last Name" type="text" value=lastName }}
                {{ input name="password" class="authInputBox" placeholder="Password" type="password" value=password }}
                {{ input name="passwordConfirmation" class="authInputBox" placeholder="Password Confirmation" type="password" value=passwordConfirmation }}
                <button id="signUpButton" class="authButton" {{ action "signUp" on="click" }}>Register Account</button>
                <div class="authFormHelpers">
                    <a href="/login" class="authHelperLink" {{ action "goToLogin" on="click" bubbles=false }}>Already have an account?</a>
                </div>
            </form>
        </div>
    </main>
</div>